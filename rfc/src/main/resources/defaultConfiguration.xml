<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans default-lazy-init="true">

    <!--  Force required property checks to be effective -->
    <bean
        class="org.springframework.beans.factory.annotation.RequiredAnnotationBeanPostProcessor"
        lazy-init="false" />

    <!--  *** PropertyPlaceHoderConfiguer *** -->
    <bean id="propertyConfigurer"
        class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer"
        lazy-init="false">
    </bean>

    <bean id="properties"
        class="org.springframework.beans.factory.config.PropertiesFactoryBean"
        lazy-init="false">
        <property name="properties">
            <props>
                <prop key="target-directory">${project.basedir}/src/main/java</prop>
                <prop key="target-registry-directory">${project.basedir}/src/main/resources/META-INF</prop>
            </props>
        </property>
    </bean>

    <bean id="commonList"
        class="org.springframework.beans.factory.config.ListFactoryBean">
        <property name="sourceList">
            <list>
                <ref bean="mib2_common" />
            </list>
        </property>
    </bean>

    <bean id="mib2_common" class="com.btisystems.pronx.ems.model.MibCommon">
        <property name="sourceDirectoryList">
            <bean class="org.springframework.beans.factory.config.ListFactoryBean">
                <property name="sourceList">
                    <list>
                        <value>${project.basedir}/src/main/resources/mibs</value>
                    </list>
                </property>
            </bean>
        </property>
        <property name="packageName" value="com.btisystems.mibbler.mibs.rfc"></property>
        <property name="defaultSourceDirectories" ref="commonSourceDirectoryList" />
        <property name="rootObjects" ref="CommonMib2List" />
        <property name="name" value="MIB2" />
    </bean>

    <bean id="CommonMib2List"
        class="org.springframework.beans.factory.config.ListFactoryBean">
        <property name="sourceList">
            <list>
                <value>1.3.6.1.2.1</value>
            </list>
        </property>
    </bean>
    
    <bean id="groupList"
        class="org.springframework.beans.factory.config.ListFactoryBean">
        <property name="sourceList">
            <list>
                <!-- Additional groups can be added here.
                <ref bean="foo-bar" />
                -->
            </list>
        </property>
    </bean>

    <bean id="commonSourceDirectoryList"
        class="org.springframework.beans.factory.config.ListFactoryBean">
        <property name="sourceList">
            <list>
                <value>${project.basedir}/src/main/resources/mibs</value>
            </list>
        </property>
    </bean>


</beans>
